<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SensorAnimation.MainPage" 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Demo Zindex  -->
    <AbsoluteLayout>
        <BoxView AbsoluteLayout.LayoutBounds="0,0,100,25" AbsoluteLayout.LayoutFlags="PositionProportional" Color="#252526" />
        <Label x:Name="AngleShiftLabel" AbsoluteLayout.LayoutBounds="0.1,0,110,25" AbsoluteLayout.LayoutFlags="PositionProportional" TextColor="White" />
        <BoxView AbsoluteLayout.LayoutBounds="0,0.5,25,100" AbsoluteLayout.LayoutFlags="PositionProportional" Color="Green" />
        <BoxView AbsoluteLayout.LayoutBounds="0.5,1,2,1" AbsoluteLayout.LayoutFlags="HeightProportional,XProportional,YProportional" Color="Gray" />
        <Grid x:Name="PlumbLine"
            AbsoluteLayout.LayoutBounds="0.5,3,100,800"
            AbsoluteLayout.LayoutFlags="PositionProportional"
             RowDefinitions="4*,3*,1*">
            <BoxView Grid.Row="1" Color="Purple" WidthRequest="2" />
            <Image Grid.Row="2" VerticalOptions="Start" Source="plumbbob.png" />        
        </Grid>
        <BoxView AbsoluteLayout.LayoutBounds="1,0.5,25,100" AbsoluteLayout.LayoutFlags="PositionProportional" Color="Red" />

    </AbsoluteLayout>

</ContentPage>
